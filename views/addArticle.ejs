<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') -%>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <header class="m-0">
      <%- include('./partials/header') -%>
    </header>
    <main class="container mb-5">
      <section class="row justify-content-center align-items-center">
        <div class="col-md-9 col-lg-6 g-3 mx-auto py-3 px-4 border rounded bg-light shadow m-5">
          <form
            action="/news"
            method="post"
          >
            <p class="text-left fs-3 fw-medium">Add a New Article</p>
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="exampleInputTitle1"
                name="title"
                required
              />
              <label for="floatingInput">Article Title</label>
            </div>

            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="exampleInputDescription1"
                name="description"
                required
              />
              <label for="floatingInput">Article Description</label>
            </div>
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="exampleInputURL1"
                name="url"
                required
              />
              <label for="floatingInput">Article URL</label>
            </div>
            <input type="submit" class="btn btn-primary w-100" />
          </form>
        </div>
      </section>
    </main>
    <footer class="footer py-3 bg-dark text-light">
      <%- include('./partials/footer') -%>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
