<%
  let linkData = [
    { id: 1, name: "US DOT | FMCSA", imgUrl: "/img/US-DOT.png", linkUrl: "https://www.fmcsa.dot.gov/" },
    { id: 2, name: "Drug and Alcohol Clearinghouse", imgUrl: "/img/drug.png", linkUrl: "https://clearinghouse.fmcsa.dot.gov/" },
    { id: 3, name: "Safety Management System", imgUrl: "/img/safety.jpg", linkUrl: "https://ai.fmcsa.dot.gov/SMS" },
    { id: 4, name: "Electronic Code of Federal Regulation", imgUrl: "/img/ecfr.png", linkUrl: "https://www.ecfr.gov/current/title-49" },
    { id: 5, name: "NJ Motor Vehicle Commission", imgUrl: "/img/njmvc.png", linkUrl: "https://www.state.nj.us/mvc/" },
    { id: 6, name: "PA DOT", imgUrl: "/img/pa-dot.png", linkUrl: "https://www.penndot.gov" },
    { id: 7, name: "DE DOT", imgUrl: "/img/deldot.png", linkUrl: "https://www.dmv.de.gov/" },
    { id: 8, name: "NJ State Police", imgUrl: "/img/njsp.png", linkUrl: "https://www.njsp.org/" },
    { id: 9, name: "Tips for Truck Drivers", imgUrl: "/img/tips.png", linkUrl: "https://www.lanierlawfirm.com/50-tips-for-truck-drivers/" },
    { id: 10, name: "Commercial Vehicle Safety Alliance: CVSA", imgUrl: "/img/csva.png", linkUrl: "https://www.cvsa.org/" },
  ];
%>
<section class="border-top border-2 border-dark-subtle overflow-x-hidden pt-3">
  <div class="container">
    <p class="text-left fs-3 fw-medium pt-3">External Resources</p>
    <div class="row g-5 pb-5" id="card-links">
      <% for (let index in linkData) { let link = linkData[index]; %>
      <div class="col-sm-1 col-md-4 col-lg-3">
        <div
          id="<%= link.id %>-<%= link.name %>"
          class="card card-block bg-light h-100 text-center shadow mb-5 rounded"
        >
          <div class="card-body align-items-center justify-content-center">
            <img class="card-image mb-3" src="<%= link.imgUrl %>" />
            <p class="card-title fs-5"><%= link.name %></p>
          </div>
          <div class="card-footer d-flex justify-content-center align-items-center">
            <a
              target="_blank"
              href="<%= link.linkUrl %>"
              class="bg-primary text-light fw-medium text-decoration-none rounded w-50 p-2"
            >
              Click here
            </a>
          </div>
        </div>
      </div>
      <% }; %>
    </div>
  </div>
</section>
